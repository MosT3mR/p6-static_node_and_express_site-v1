extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box


        h1=projectShow.project_name

        p=projectShow.description

      .project-tech-links-box.box
        h6 Technologies
        ul

          each item in projectShow.technologies
            li=item

        a.btn-link(href=`${projectShow.live_link}` target='_blank') Live Demo
        a.btn-link(href=`${projectShow.github_link}` target='_blank') GitHub Repo

    .project-img-box.box

      img.project-img(src=`${projectShow.image_urls[0]}`, alt=`${projectShow.description}`)
      img.project-img(src=`${projectShow.image_urls[1]}`, alt=`${projectShow.description}`)

    nav.nav
      a(href='/')
        span &larr;
        |  Back
